<?xml version="1.0" encoding="UTF-8"?>
<fop version="1.0">
  <!-- Let FOP discover the system fonts you installed above -->
  <fonts>
    <auto-detect/>
  </fonts>

  <!-- Turn on tagging -->
  <accessibility>true</accessibility>

  <!-- Ask FOP to produce PDF/UA-1 structure -->
  <renderer mime="application/pdf">
    <pdf-ua-mode>PDF/UA-1</pdf-ua-mode>
  </renderer>
</fop>

